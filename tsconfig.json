{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom",
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist/tmp",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".quasar"
  ],
}